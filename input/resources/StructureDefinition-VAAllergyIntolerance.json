      },
      {
        "path": "AllergyIntolerance.extension",
        "sliceName": "richAnnotation/annotation/author",
        "type": [
          {
            "code": "Extension",
            "profile": "http://va.gov/fhir/us/vha-ampl-ig/StructureDefinition/richAnnotation.annotation.author"
